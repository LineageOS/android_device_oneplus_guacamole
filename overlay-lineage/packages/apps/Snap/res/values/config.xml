<!-- Camera app resources that may need to be customized
     for different hardware or product builds. -->
<resources>
    <!-- Number of supported cameras.
         Helpful when a HAL reports more devices than it should.
         A value of -1 enables support for all available cameras reported by HAL -->
    <integer name="number_of_supported_cameras">4</integer>

    <!-- Enable support for bokeh mode -->
    <bool name="support_bokeh_mode">true</bool>
</resources>
